<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@layout/group_gradient"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/taskGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/countGroup"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/icon2"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_size_hdpi"
        android:textColor="@android:color/white"
        android:textSize="@dimen/Text_size_normal_hdpi" />

    <TextView
        android:id="@+id/countGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:text="(0/0)"
        android:textColor="@android:color/white"
        android:textSize="@dimen/Text_size_normal_hdpi" />

</RelativeLayout>